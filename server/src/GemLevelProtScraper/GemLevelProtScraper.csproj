<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup Label="Build">
    <TargetFramework>net9.0</TargetFramework>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <!-- Disable publishing of a web.config file for IIS when calling dotnet publish. -->
    <IsTransformWebConfigDisabled>true</IsTransformWebConfigDisabled>
  </PropertyGroup>

  <PropertyGroup Label="Docker">
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
  </PropertyGroup>

  <PropertyGroup Label="Package">
    <Authors>ProphetLamb</Authors>
    <Company>ProphetLamb</Company>
    <Product>GemLevelProtApi</Product>
    <Description>Provides up to date information on gem values at specific levels</Description>
    <Copyright>Copyright Â© ProphetLamb. All rights Reserved</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="12.0.1" />
    <PackageReference Include="csharp-mongodb-migrations" Version="1.2.0" />
    <PackageReference Include="Dawn.Guard" Version="1.12.0" />
    <PackageReference Include="DotNet.Glob" Version="3.1.3" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.0" />
    <PackageReference Include="Microsoft.Owin" Version="4.2.3" />
    <PackageReference Include="Microsoft.Owin.Cors" Version="4.2.3" />
    <PackageReference Include="MongoDB.Driver" Version="3.5.0" />
    <PackageReference Include="ScrapeAAS" Version="1.1.2" />
    <PackageReference Include="ScrapeAAS.WebShare" Version="1.1.2" />
    <PackageReference Include="Sentry.AspNet" Version="5.16.2" />
    <PackageReference Include="System.Linq.Async" Version="6.0.3" />
    <PackageReference Include="Yoh.Text.Json.NamingPolicies" Version="1.1.3" />
    <PackageReference Update="MinVer" Version="6.0.0" />
    <PackageReference Update="Microsoft.VisualStudio.Threading.Analyzers" Version="17.14.15" />
  </ItemGroup>

</Project>
